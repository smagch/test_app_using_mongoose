$content-background = #F5F5F5
$footer-background = #267E33
 
label
  width 200px
  
div
  display block
  
html,
body
  background-color #67AF6E
  margin 0
  padding 0
  height 100%
  
#wrapper
  width 920px  
  margin auto
  min-height 100%
  position relative
  
$footer-height = 80px
$margin-bottom = 20px
$header-height = 40px
#content
  width 100%
  padding 0
  padding-bottom $footer-height
  //background #838383 don't set background for padding-bottom
  overflow auto
  border-radius(10px)

$header-color = #6F6F6F

header
  height $header-height
  line-height $header-height
  h1
    a
      font-family 'Unkempt', cursive;
      font-size $header-height * 0.9
      text-decoration none
      color $header-color
      &:visited
        color $header-color
    display inline
    float left
    margin 4px 0 0;
    padding 0
    line-height $header-height
  nav
    float right
    text-align right
    color #999
    margin 4px 0
    font-weight bold
    font-size 1.2em
    color #E1E1E1    
    .login-button, ul
      border-radius(9px)
      padding 6px 16px 
    .login-button
      background #3325E1
      margin-left 9px
      display inline
      text-decoration none
      position relative
      cursor pointer
      &:hover
        background-color #CC070E
    ul
      background $footer-background
      display inline
      li
        display inline
        margin 0 1em        
        a
          text-decoration none
          color inherit
          &:visited
            color inherit
          &:hover
            color #990E16

footer
  position absolute
  bottom 0
  width 100%
  margin-bottom $margin-bottom
  margin-top $margin-bottom
  height $footer-height - $margin-bottom * 2
  background $footer-background
  border-radius(9px)
  line-height @height
  text-align right
  ul
    float left
    padding-left 1em
    margin 0
    height $footer-height - @margin-bottom
    font-weight bold    
    li
      display inline
      margin 0 1em      
      a
        text-decoration none
        &:hover
          text-decoration underline
  span
    float right
    margin-right 2em

#locales
  padding 8px 24px
  background #1A1D31
  color #ECECEC
  font-weight bold  
  display block
  text-align center
  font-size 1.4em
  border-radius(9px)
  li
    display inline
    margin 0 10px   
    a
      text-decoration none
      &:hover
        color #99434A
    
#post-content
  margin 0
  padding 0
  
#tag-list
  background #995782
  border-radius(9px)
  margin 10px 0

$tag-height = 20px;
$tag-padding = 12px;

.tag-item
  background #fc9200 
  border-radius(15px)
  vertical-align middle
  display inline-block
  padding $tag-padding
  height $tag-height
  margin 4px 
  color #fff
  position relative
  cursor pointer
  &.delete
    opacity 0.2
    input
      text-decoration line-through
      cursor pointer
    .tag-delete
      opacity 0
      
  &:hover
    background-color #db0d5f
  input
    display none
    background #EB8700
    border none
    width 140px

.tag-display
  font-size 100%
  a
    text-decoration none
    font-size 1em
    font-weight bold
    &:hover
      text-decoration underline
    
.tag-delete
  display none
  width 20px
  height 20px
  float right
  cursor pointer
  position absolute  
  top - (@height / 4 )
  right - (@width / 4 )
  background url('/images/destroy.png') no-repeat 0 0

#tag-edit
  background #847E82 
  border-radius(15px)
  display block
  float right
  text-aling right
  padding 5px 15px 6px 
  color #fff
  text-decoration none
  position relative
  cursor pointer
  &:hover
    text-decoration underline

#tag-create
  background #847E82 
  border-radius(9px)
  padding 5px 15px 6px
  margin-top 10px
  display none  
  color #fff
  text-decoration none
  position relative
  cursor pointer
  &:hover
    text-decoration underline
    
.editing 
  input
    display block
  .tag-item:hover
    .tag-delete
      display inline-block
  .tag-display
    display none
  .tag-delete    
    &:hover      
      background-position 0 -20px
  #tag-create
    display inline  

button(radius)
  border-radius(radius || 9px)  
  display inline
  padding 5px 15px 6px 
  text-decoration none
  position relative
  cursor pointer

ul#post-list
  background $content-background
  padding 10px
  margin 0
  border-radius(9px)
  list-style none
  li
    padding 10px
    margin 10px
    border-radius(10px)
    background #999

ul#post-content
   list-style none

.button
  background #fc9200 
  border-radius(15px)
  display inline-block
  padding 5px 15px 6px 
  color #fff
  text-decoration none
  position relative
  cursor pointer
  &:hover
    background-color #db0d5f

$button-delete-size = 20px
.button-delete
  width $button-delete-size
  height $button-delete-size
  cursor pointer
  //top (@height / -4 )
  //right (@width / -4 )
  background url('/images/destroy.png') no-repeat 0 0
  &:hover
    background-position 0 (@width * -1)    
  
.modal-background
  background black
  opacity(0.5)
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 10000

$modal-content-width = 560px
.modal-content
  background #E1E1E1
  position fixed
  z-index 10001
  top 100px
  left 50%
  padding 20px
  width $modal-content-width - @padding * 2
  border-radius(6px)    
  margin-left -($modal-content-width/2)
  .button-delete
    position absolute
    top ($button-delete-size / -2)
    right ($button-delete-size / -2)
    


/* =============================================================================
